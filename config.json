{
  "directories": {
    "appDir": "apps",
    "testConfigDir": "tests/config",
    "scriptsDir": "scripts",
    "assetsDir": "assets",
    "nodeModulesDir": "node_modules",
    "websiteDir": "website",
    "templatesDir": "website/templates",
    "staticDir": "website/static"
  },
  "buildTools": {
    "requiresNpx": ["vite", "ng", "playwright"],
    "pythonCommands": ["python3 -m http.server", "python -m http.server"]
  },
  "testing": {
    "defaultTimeout": 300,
    "maxRetries": 3,
    "testReporter": "list",
    "testCommand": "npx playwright test",
    "configPathTemplate": "tests/config/playwright-{framework}.config.js"
  },
  "linting": {
    "tool": "eslint",
    "maxMessageLength": 200,
    "excludePrefixes": ["npm", "warning", "\n", "\t"],
    "errorPatterns": [
      "(\\d+)\\s+errors?\\b",
      "✖\\s+(\\d+)\\s+problems?.*?(\\d+)\\s+errors?",
      "❌\\s*(\\d+)\\s*errors?"
    ],
    "warningPatterns": [
      "(\\d+)\\s+warnings?\\b",
      "⚠️?\\s*(\\d+)\\s*warnings?",
      "\\b(\\d+)\\s+warnings?\\s+"
    ]
  },
  "requirements": {
    "nodeVersion": 16,
    "tools": {
      "node": "node --version",
      "playwright": "npx playwright --version",
      "eslint": "npx eslint --version"
    }
  },
  "ui": {
    "progressDelay": 0.25,
    "passRateThresholds": {
      "excellent": 100,
      "good": 75,
      "warning": 50
    }
  },
  "scripts": {
    "essentialCommands": {
      "setup": "python scripts/setup/main.py",
      "test": "python scripts/verify/test.py",
      "lint": "python scripts/verify/lint.py",
      "check": "python scripts/verify/check.py",
      "build": "python scripts/run/build.py",
      "start": "python scripts/run/serve.py",
      "help": "python scripts/main.py"
    },
    "sectionHeaders": {
      "dev": "// DEV COMMANDS",
      "build": "// BUILD COMMANDS",
      "test": "// TEST COMMANDS",
      "lint": "// LINT COMMANDS",
      "misc": "// MISC SCRIPTS"
    },
    "sectionSeparators": {
      "dev": "-------------------------------------------------------",
      "build": "-----------------------------------------------------",
      "test": "------------------------------------------------------",
      "lint": "------------------------------------------------------",
      "misc": "--------------------------------------------------------"
    }
  },
  "mockData": {
    "weatherApi": {
      "defaultLocation": {
        "latitude": 51.5074,
        "longitude": -0.1278,
        "timezone": "GMT",
        "name": "London",
        "country": "UK"
      },
      "seed": 42,
      "outputPath": "mocks/weather-data.json",
      "variationRange": {
        "temperature": 5,
        "humidity": 15,
        "pressure": 20
      }
    }
  },
  "benchmarks": {
    "server": {
      "host": "127.0.0.1",
      "port": 3000,
      "baseUrl": "http://127.0.0.1:3000",
      "healthEndpoint": "/health"
    },
    "lighthouse": {
      "categories": ["performance", "accessibility", "best-practices", "seo"],
      "settings": {
        "onlyCategories": ["performance", "accessibility", "best-practices", "seo"],
        "output": "json",
        "chromeFlags": ["--headless=new", "--no-sandbox", "--disable-gpu", "--disable-dev-shm-usage", "--disable-extensions", "--disable-background-timer-throttling", "--disable-backgrounding-occluded-windows", "--disable-renderer-backgrounding"]
      },
      "thresholds": {
        "performance": 80,
        "accessibility": 90,
        "best-practices": 80,
        "seo": 90
      }
    },
    "output": {
      "directory": "benchmark-results",
      "formats": ["json", "html"],
      "timestamp": true
    }
  },
  "website": {
    "title": "Frontend Framework Comparison",
    "description": "A comprehensive comparison of modern frontend frameworks",
    "paths": {
      "homepage": "/",
      "frameworkLanding": "/{framework}",
      "frameworkApp": "/{framework}/app",
      "frameworkSource": "/{framework}/source",
      "notFound": "/404"
    },
    "deployment": {
      "outputDir": "dist-website",
      "baseUrl": "",
      "copyAssets": true
    }
  },
  "miscScripts": [
    {"name": "install:playwright", "command": "playwright install"},
    {"name": "generate-mocks", "command": "python scripts/setup/generate_mocks.py"},
    {"name": "generate-scripts", "command": "python scripts/setup/generate_scripts.py"},
    {"name": "sync-assets", "command": "python scripts/setup/sync_assets.py"},
    {"name": "benchmark", "command": "python scripts/benchmark/main.py"},
    {"name": "benchmark:lighthouse", "command": "python scripts/benchmark/lighthouse.py"},
    {"name": "verify", "command": "python scripts/verify/main.py"},
    {"name": "build:static", "command": "python scripts/run/build.py -- --for-comparison"}
  ]
}
