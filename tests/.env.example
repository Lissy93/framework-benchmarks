# Test Environment Configuration
# Copy this to .env for local testing

# Test timeout settings (in milliseconds)
TEST_TIMEOUT=30000
EXPECT_TIMEOUT=5000

# Browser settings
HEADLESS=true
SLOW_MO=0

# Test data settings
MOCK_API=true
USE_REAL_API=false

# Performance test thresholds
MAX_LOAD_TIME=2000
MAX_RENDER_TIME=1000

# Debugging
DEBUG_MODE=false
SCREENSHOTS_ON_FAILURE=true
VIDEO_ON_FAILURE=true

# CI specific settings
CI=false
PARALLEL_WORKERS=1